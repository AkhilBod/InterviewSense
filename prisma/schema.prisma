generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String               @id @default(cuid())
  name                String?
  email               String               @unique
  emailVerified       DateTime?
  password            String?
  image               String?
  createdAt           DateTime             @default(now())
  creatorCode         String?
  dailyCreditLimit    Int                  @default(15)
  dailyCredits        Int                  @default(15)
  lastCreditReset     DateTime             @default(now())
  stripeCustomerId    String?              @unique
  accounts            Account[]
  featureUsage        FeatureUsage[]
  passwordResetTokens PasswordResetToken[]
  practiceSessions    PracticeSession[]
  savedQuestions      SavedQuestion[]      @relation("SavedQuestions")
  sessions            Session[]
  subscription        Subscription?
  userStats           UserStats?
  verificationTokens  VerificationToken[]

  @@index([stripeCustomerId])
  @@index([lastCreditReset])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  id         String   @id @default(cuid())
  user       User     @relation(fields: [identifier], references: [email])

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
}

model UserStats {
  id                  String    @id @default(cuid())
  userId              String    @unique
  dailyStreak         Int       @default(0)
  longestStreak       Int       @default(0)
  lastActivityDate    DateTime?
  weeklyGoal          Int       @default(3)
  weeklyProgress      Int       @default(0)
  weeklyGoalsMet      Int       @default(0)
  lastWeekReset       DateTime  @default(now())
  bestInterviewScore  Float     @default(0)
  bestResumeScore     Float     @default(0)
  bestTechnicalScore  Float     @default(0)
  bestBehavioralScore Float     @default(0)
  totalSessions       Int       @default(0)
  totalInterviews     Int       @default(0)
  totalResumeChecks   Int       @default(0)
  totalTimeMinutes    Int       @default(0)
  lastScore           Float     @default(0)
  averageScore        Float     @default(0)
  recentSessions      Json      @default("[]")
  scoreImprovement    Float     @default(0)
  streakImprovement   Int       @default(0)
  strongestArea       String?
  improvementArea     String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([dailyStreak])
  @@index([weeklyProgress])
  @@index([bestInterviewScore])
}

model PracticeSession {
  id           String   @id @default(cuid())
  userId       String
  type         String
  score        Float?
  duration     Int?
  completed    Boolean  @default(true)
  improvements Json?
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([type, score])
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  canceledAt           DateTime?
  trialStart           DateTime?
  trialEnd             DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([stripeCustomerId])
  @@index([status])
}

model PaymentHistory {
  id              String           @id @default(cuid())
  userId          String
  stripeInvoiceId String           @unique
  amount          Int
  currency        String           @default("usd")
  status          String
  plan            SubscriptionPlan
  createdAt       DateTime         @default(now())

  @@index([userId])
}

model FeatureUsage {
  id          String      @id @default(cuid())
  userId      String
  featureType FeatureType
  creditsUsed Int
  success     Boolean     @default(true)
  metadata    Json?
  createdAt   DateTime    @default(now())
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([featureType])
}

model SavedQuestion {
  id           String       @id @default(cuid())
  userId       String
  questionId   String
  questionText String
  type         QuestionType
  company      String?
  difficulty   String?
  category     String?
  practiced    Boolean      @default(false)
  completed    Boolean      @default(false)
  notes        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  user         User         @relation("SavedQuestions", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId, type])
  @@index([userId, practiced])
}

enum SubscriptionPlan {
  FREE
  MONTHLY
  ANNUAL
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
  INCOMPLETE_EXPIRED
  UNPAID
}

enum FeatureType {
  COVER_LETTER
  RESUME_REVIEW
  RESUME_ANALYSIS
  TECHNICAL_INTERVIEW
  BEHAVIORAL_PRACTICE
  SYSTEM_DESIGN
  PORTFOLIO_REVIEW
  CAREER_ROADMAP
}

enum QuestionType {
  BEHAVIORAL
  TECHNICAL
}
